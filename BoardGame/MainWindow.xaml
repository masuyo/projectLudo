                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FF252DC9"/>
            <GradientStop Color="#FFE8281F" Offset="1"/>
            <GradientStop Color="#FF6AE431" Offset="0.333"/>
