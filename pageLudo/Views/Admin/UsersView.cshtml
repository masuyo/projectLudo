@model IEnumerable<pageLudo.Models.UserHandlingData>

<h4>Felhasználók</h4>

@if (Model.Count() > 0)
{
    int ID = 0;
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(m => m.Username)</th>
                <th>@Html.DisplayNameFor(m => m.EmailID)</th>
                @*<th>@Html.DisplayNameFor(m => m.Password)</th>*@
                <th>@Html.DisplayNameFor(m => m.Role)</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                ID++;
                <tr>
                    <td>@ID</td>
                    <td>@Html.DisplayFor(m => user.Username)</td>
                    <td>@Html.DisplayFor(m => user.EmailID)</td>
                    <td>@Html.DisplayFor(m => user.Role)</td>
                    <td>
                        @Html.ActionLink("Edit", "EditUser", new { emailID = user.EmailID })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteUser", new { emailID = user.EmailID }, new { onclick = "return confirm('Are you sure you want to delete this user?')" })
                    </td>
                </tr>
            }
        </tbody>
</table>
}
else
{
    <p>No data in the database!</p>
}

