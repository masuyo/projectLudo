@model IEnumerable<pageLudo.Models.UserHandlingData>

<h4>Felhasználók</h4>

@if (Model.Count() > 0)
{
    <table border="1">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Username)</th>
            <th>@Html.DisplayNameFor(m => m.EmailID)</th>
            <th>@Html.DisplayNameFor(m => m.Password)</th>
            <th>@Html.DisplayNameFor(m => m.Role)</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        @foreach (var grade in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => grade.ID)</td>
                <td>@Html.DisplayFor(m => grade.Name)</td>
                <td>@Html.DisplayFor(m => grade.Grade)</td>
                <td>
                    @Html.ActionLink("Show", "Details",
                        new { id = grade.ID })
                </td>
                <td>
                    @Html.ActionLink("Remove", "Remove",
                        new { id = grade.ID })
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit",
                        new { id = grade.ID })
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No data in the database!</p>
}

