
@{
    ViewBag.Title = "ProfileSearchResult";
}

@if (TempData["AccessedUsername"] != null)
{
    <br />
    <div class="pull-left">
        <h4>Adatlap</h4>
        <br />
        <table>
            <tr>
                <td>Username:</td>
                <td>@TempData["AccessedUsername"]</td>
            </tr>
            <tr>
                <td>E-mail address:</td>
                <td>@TempData["AccessedEmailID"]</td>
            </tr>
        </table>
        <br />
    </div>
    if ((string)TempData["AccessedFriendState"] == "false")
    {
        <div class="form-group pull-right">
            <div class="col-sm-12 col-xs-12" style="min-width:200px;">
                <input type="submit" value="Friend" class="btn btn-success btn-block" onclick='this.disabled = "disabled";' />
            </div>
        </div>
    }
    else
    {
        <div class="form-group pull-right">
            <div class="col-sm-12 col-xs-12" style="min-width:200px; color: red">
                <input type="submit" value="Unfriend" class="btn btn-warning btn-block" onclick='this.disabled = "disabled";' />
            </div>
        </div>
    }
    <div class="clearfix"></div>
}
