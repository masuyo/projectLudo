    </table>

    //Session["AccessedFriendState"]
    //Session["AccessedFriendedYou"]
    //Session["AccessedFriendedMe"]
    // ha egyikünk sem barátja a másiknak
    if (Session["AccessedFriendedYou"].ToString() == "false" && Session["AccessedFriendedMe"].ToString() == "false")
    {
        @using (Html.BeginForm("Friending", "Friend", FormMethod.Post))
        {
            <div class="form-group pull-right">
                <div class="col-sm-12 col-xs-12" style="min-width:200px;">
                    <button id="Friend" class="btn btn-success btn-block">Friend</button>
                </div>
            </div>
        }
    }
    else
    {
        // ha én barátnak jelöltelek, mindegy, hogy elfogadtad-e, unfriendelhetlek
        if (Session["AccessedFriendedYou"].ToString() == "true")
        {
            @using (Html.BeginForm("Unfriending", "Friend", FormMethod.Post))
            {
                <div class="form-group pull-right">
                    <div class="col-sm-12 col-xs-12" style="min-width:200px; color: red">
                        <button id="Unfriend" class="btn btn-warning btn-block">Unfriend</button>
                    </div>
                </div>
            }
        }
        // barátnak jelöltél, de még nem jelöltelek vissza
        else /*if ((string)Session["AccessedFriendedYou"] == "false" && (string)Session["AccessedFriendedMe"] == "true")*/
        {
            @using (Html.BeginForm("FriendAccepting", "User", FormMethod.Post))
            {
                <div class="form-group pull-right">
                    <div class="col-sm-12 col-xs-12" style="min-width:200px; color: red">
                        <button id="FriendAccept" class="btn btn-success btn-block">Friend back</button>
                    </div>
                </div>
            }
        }
    }

}

