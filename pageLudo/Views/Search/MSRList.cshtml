@model IEnumerable<pageLudo.Models.UserListingData>


@{
    ViewBag.Title = "MultipleProfileSearchResult";
}

@if (Model.Count() > 0)
{
    int ID = 0;
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Username</th>
                <th>Email address</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                ID++;
                <tr>
                    <td>@ID</td>
                    <td>@Html.DisplayFor(m => user.Username)</td>
                    <td>@Html.DisplayFor(m => user.EmailID)</td>

                    <td>
                        @Html.ActionLink("Profile", "Details", new { emailID = user.EmailID })
                    </td>
                    @*
                <td>
                    @Html.ActionLink("Remove", "Remove",
                        new { id = grade.ID })
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit",
                        new { id = grade.ID })
                </td>*@
                </tr>
            }
        </tbody>
</table>
}
else
{
    <p>No data in the database!</p>
}