@model pageLudo.Models.LoginUser

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div align="center">
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()          // CSRF attack
                                    @Html.ValidationSummary(true)
        if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }

        <fieldset>
            <div class="form-group">
                @Html.LabelFor(a => a.EmailID)
                @Html.TextBoxFor(a => a.EmailID)
                @Html.ValidationMessageFor(a => a.EmailID)
            </div>
            <div class="form-group">
                @Html.LabelFor(a => a.Password)
                @Html.PasswordFor(a => a.Password)
                @Html.ValidationMessageFor(a => a.Password)
            </div>
            <div><input type="submit" value="OK" class="btn btn-default" /></div>

        </fieldset>
    }
</div>
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}